<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd"
        logicalFilePath="../db/changelog/data/enumTables/roles.xml">

    <changeSet id="role_vocalist" author="${author}">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(1) FROM role AS r WHERE r.name = "Vocalist"
            </sqlCheck>
        </preConditions>
        <insert tableName="role">
            <column name="name" value="Vocalist"/>
        </insert>
        <rollback>
            <sql>
                DELETE FROM role AS r WHERE r.name = "Vocalist"
            </sql>
        </rollback>
    </changeSet>

